# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (REQUIRED)
MONGODB_URI=mongodb://localhost:27017/menuqr

# JWT Secret (REQUIRED - Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (REQUIRED - Comma-separated; CORS allows these origins.)
# Production (cross-site): include both www and apex so cookie auth works from either
# FRONTEND_URL=https://www.scanbit.in,https://scanbit.in
FRONTEND_URL=http://localhost:8080,http://127.0.0.1:8080

# API URL (optional - for CSP connect-src when frontend is on different domain)
# PUBLIC_API_URL=https://api.scanbit.in

# Public website URL for emails and messages (optional; defaults to FRONTEND_URL)
# Production: use HTTPS so links in emails/WhatsApp are secure
# PUBLIC_WEBSITE_URL=https://scanbit.in

# Cloudinary Configuration (REQUIRED - for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for registration, onboarding, QR, payment, review & reminder notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=ScanBit <noreply@scanbit.in>

# Brochure (optional - for PDF attachment in download-brochure email)
# BROCHURE_URL=https://example.com/path/to/brochure.pdf

# Admin Configuration
ADMIN_EMAIL=admin@menuqr.com
ADMIN_PASSWORD=Admin@123456


# Payments (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Cookie (production cross-site auth: frontend www.scanbit.in, API server.scanbit.in)
# Required for httpOnly cookie to be sent cross-site: SameSite=None, Secure=true, Domain
# COOKIE_DOMAIN=.scanbit.in
# COOKIE_NAME=token
# COOKIE_SAME_SITE=None
# COOKIE_SECURE=true

# Security (Production)
# OTP_HASH_SECRET=required-for-otp-in-production-use-strong-random-string
# JWT_EXPIRES_IN=7d
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=2000
# RATE_LIMIT_AUTH_MAX_REQUESTS=200
# (GET /api/auth/me is excluded from auth limit; increase further if legitimate users hit 429)
# MASTER_ADMIN_EMAIL=admin@yourdomain.com
# LOG_LEVEL=warn
# LOG_CONFIG=true
# MONGOOSE_DEBUG=true

# Redis (optional - for rate limiting; fallback to in-memory when not set)
# REDIS_URL=redis://localhost:6379/0
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_KEY_PREFIX=scanbit:
